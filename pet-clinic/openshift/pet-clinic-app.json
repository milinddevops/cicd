{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "cicd-app-app-template-1"
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "apps.openshift.io/v1",
            "metadata": {
                "name": "cicd-app",
                "labels": {
                    "app": "cicd-app"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Rolling",
                    "rollingParams": {
                        "updatePeriodSeconds": 1,
                        "intervalSeconds": 1,
                        "timeoutSeconds": 600,
                        "maxUnavailable": "1",
                        "maxSurge": "1"
                    }
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": "${{REPLICA_COUNT}}",
                "selector": {
                    "app": "cicd-app",
                    "deploymentconfig": "cicd-app"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "cicd-app",
                            "deploymentconfig": "cicd-app"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "cicd-app",
                                "image": "milinddocker/cicd:${IMAGE_VERSION}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "cpu": "${{CPU_LIMIT}}",
                                        "memory": "${{MEM_LIMIT}}"
                                    },
                                    "requests": {
                                        "cpu": "${{CPU_REQ}}",
                                        "memory": "${{MEM_REQ}}"
                                    }
                                },
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "terminationGracePeriodSeconds": 30,
                        "dnsPolicy": "ClusterFirst",
                        "securityContext": {}
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "cicd-app",
                "labels": {
                    "app": "cicd-app"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentconfig": "cicd-app"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "Route",
            "apiVersion": "route.openshift.io/v1",
            "metadata": {
                "name": "cicd-app",
                "labels": {
                    "app": "cicd-app"
                }
            },
            "spec": {
                "host": "cicd-app-cicd-applications.10.125.214.216",
                "path": "/petclinic",
                "to": {
                    "kind": "Service",
                    "name": "cicd-app",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "wildcardPolicy": "None"
            }
        }
    ],

    "parameters": [
        {
            "name": "REPLICA_COUNT",
            "required": true
        },
        {
            "name": "CPU_LIMIT",
            "required": true
        },
        {
            "name": "MEM_LIMIT",
            "required": true
        },
        {
            "name": "CPU_REQ",
            "required": true
        },
        {
            "name": "MEM_REQ",
            "required": true
        },
        {
            "name": "IMAGE_VERSION",
            "required": true
        }
    ]
}